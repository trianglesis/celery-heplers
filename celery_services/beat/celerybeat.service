# ========================================
# /etc/default/celeryd.conf
# /etc/systemd/system/celerybeat.service
# systemctl daemon-reload
# systemctl restart celerybeat.service
# ========================================

[Unit]
Description=Celery beat
After=network.target

[Service]
Type=forking
User=user
Group=celery
EnvironmentFile=-/etc/default/celeryd.conf
WorkingDirectory=/var/www/web_app_dir
ExecStart=/bin/sh -c '/var/www/web_app_dir/web_app/bin/celery beat -A ${CELERY_APP} --detach \
 --pidfile=${CELERYBEAT_PID_FILE} \
 --logfile=${CELERYBEAT_LOG_FILE} \
 --loglevel=${CELERYBEAT_LOG_LEVEL} \
 --schedule=${CELERYBEATD_SHEDULE_FILE} ${CELERYBEAT_OPTS}'
ExecStop=/bin/systemctl kill celerybeat.service
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
